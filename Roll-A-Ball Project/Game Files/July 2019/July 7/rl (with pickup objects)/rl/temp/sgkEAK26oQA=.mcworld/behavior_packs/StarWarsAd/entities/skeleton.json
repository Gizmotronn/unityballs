{
  "minecraft:entity": {
    "format_version": 0.1,

    "component_groups": {
      "minecraft:stormtrooper": {
        "minecraft:variant": {
          "value": 0
        }
      },
	  "minecraft:deathtrooper": {
        "minecraft:variant": {
          "value": 1
        },
		"minecraft:health": {
          "value": 40,
          "max": 50
        },
        "minecraft:behavior.ranged_attack": {
          "attack_interval_min": 0.3,
          "attack_interval_max": 1.0,
          "attack_radius": 31
        }
      },
	  "minecraft:lightning_immune": {
        "minecraft:damage_sensor": [
          {
            "on_damage": { "filters": { "other_with_families": "lightning" } },
            "deals_damage": false
          }
        ]
      }
    },

    "components": {
      "minecraft:identifier": {
        "id": "minecraft:skeleton"
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.95
      },
      "minecraft:type_family": {
        "family": [ "empire", "clone", "monster", "skeleton" ]
      },
      "minecraft:breathable": {
        "totalSupply": 15,
        "suffocateTime": 0
      },

      "minecraft:health": {
        "value": 20,
        "max": 30
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/clone.json"
      },
      "minecraft:movement": {
        "value": 0.25,
        "max": 0.25
      },
      "minecraft:shooter": {
        "type": "Arrow",
        "def": "minecraft:arrow.skeleton"
      },
      "minecraft:nameable": {
      },
      "minecraft:behavior.float": {
        "priority": 0
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 2,
        "entity_types": {
          "filters": {
            "other_without_families": [
              "empire"
            ]
          }
        }
      },
      "minecraft:equipment": {
        "table": "loot_tables/entities/skeleton_gear.json"
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "entity_types": [
          {
            "filters": { "other_with_families": [ "player", "resistance", "villager" ],
            "other_without_families": [ "empire" ]
			},
            "max_dist": 32
          }
        ],
        "must_see": true
      },
      "minecraft:behavior.ranged_attack": {
        "attack_interval_min": 0.3,
        "attack_interval_max": 1.5,
        "attack_radius": 31
      },
	  "minecraft:behavior.break_door": {
        "priority": 1
      },
      "minecraft:behavior.random_stroll": {
        "priority": 5,
        "speed_multiplier": 1
      },
      "minecraft:behavior.look_at_player": {
        "priority": 6,
        "look_distance": 8
      },
      "minecraft:behavior.random_look_around": {
        "priority": 6
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 80,
            "remove": {
            },
            "add": {
              "component_groups": [
                "minecraft:stormtrooper"
              ]
            }
          },
          {
            "weight": 20,
            "remove": {
            },
            "add": {
              "component_groups": [
                "minecraft:deathtrooper"
              ]

            }
          }
        ]
      },

      "minecraft:spring_trap": {
        "add": { "component_groups": [ "minecraft:lightning_immune" ] }
      }
    }
  }
}