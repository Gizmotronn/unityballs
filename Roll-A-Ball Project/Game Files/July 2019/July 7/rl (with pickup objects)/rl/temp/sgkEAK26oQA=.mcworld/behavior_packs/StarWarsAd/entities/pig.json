{
  "minecraft:entity": {
    "format_version": 0.1,

    "component_groups": {
      "minecraft:jockey_storm": {
        "minecraft:addrider": {
          "entity_type": "minecraft:skeleton.wither"
        }
      },
      "minecraft:become_storm": {
        "minecraft:transformation": {
          "into": "minecraft:skeleton"
        }
      },
      "minecraft:troop_storm": {
        "minecraft:shooter": {
          "type": "skeleton",
          "def": "minecraft:skeleton"
        },
        "minecraft:behavior.ranged_attack": {
          "attack_interval_min": 2.0,
          "attack_interval_max": 2.5,
          "attack_radius": 45
        },
        "minecraft:timer": {
          "time": [ 5, 15 ],
          "looping": false,
          "time_down_event": {
            "event": "minecraft:change1",
            "target": "self"
          }
        }
      },
      "minecraft:fireball_charge": {
        "minecraft:shooter": {
          "type": "largefireball",
          "def": "minecraft:fireball.large"
        },
        "minecraft:behavior.ranged_attack": {
          "attack_interval_min": 2.0,
          "attack_interval_max": 4.0,
          "attack_radius": 45
        },
        "minecraft:timer": {
          "time": [ 5, 15 ],
          "looping": false,
          "time_down_event": {
            "event": "minecraft:change2",
            "target": "self"
          }
        }
      },
      "minecraft:lightning_immune": {
        "minecraft:damage_sensor": [
          {
            "on_damage": { "filters": { "other_with_families": "lightning" } },
            "deals_damage": false
          }
        ]
      }
    },

    "components": {
      "minecraft:identifier": {
        "id": "minecraft:pig"
      },
      "minecraft:collision_box": {
        "width": 1.8,
        "height": 8.8
      },
      "minecraft:scale": {
        "value": 2.6
      },
      "minecraft:type_family": {
        "family": [ "at-at", "monster", "empire" ]
      },
      "minecraft:breathable": {
        "totalSupply": 15,
        "suffocateTime": 0
      },
      "minecraft:rideable": {
        "seat_count": 1,
        "family_types": [
          "wither"
        ],
        "seats": {
          "position": [0.0, 6.2, 3.5]
        }
      },
      "minecraft:health": {
        "value": 200,
        "max": 200
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/at-at.json"
      },
      "minecraft:movement": {
        "value": 0.20,
        "max": 0.20
      },
      "minecraft:nameable": {
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 2,
        "entity_types": {
          "filters": {
            "other_without_families": [
              "empire"
            ]
          }
        }
      },
      "minecraft:fire_immune": true,
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "entity_types": [
          {
            "filters": { 
			"other_with_families": [ "player", "resistance", "villager" ],
            "other_without_families": [ "empire" ]
			},
            "max_dist": 46
          }
        ],
        "must_see": true
      },
      "minecraft:behavior.random_stroll": {
        "priority": 5,
        "speed_multiplier": 1
      },
      "minecraft:behavior.look_at_player": {
        "priority": 6,
        "look_distance": 8
      },
      "minecraft:behavior.random_look_around": {
        "priority": 6
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 80,
            "remove": {
            },
            "add": {
              "component_groups": [
                "minecraft:become_storm"
              ]
            }
          },
          {
            "weight": 20,
            "remove": {
            },
            "add": {
              "component_groups": [
                "minecraft:jockey_storm",
                "minecraft:fireball_charge"
              ]
            }
          }
        ]
      },
      "minecraft:change1": {
        "remove": {
          "component_groups": [
            "minecraft:troop_storm"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:fireball_charge"
          ]
        }
      },
      "minecraft:change2": {
        "remove": {
          "component_groups": [
            "minecraft:fireball_charge"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:troop_storm"
          ]
        }
      },
      "become_storm": {
        "add": {
          "component_groups": [
            "minecraft:become_storm"
          ]
        }
      },
      "minecraft:spring_trap": {
        "add": { "component_groups": [ "minecraft:lightning_immune" ] }
      }
    }
  }
}